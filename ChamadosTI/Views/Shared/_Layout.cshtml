<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ChamadosTI</title>

        <link href="~/Content/w3c/w3c.css" rel="stylesheet" />
        <link href="~/Content/default.css" rel="stylesheet" />

</head>
<body>


    <div>
        <div class="w3-sidebar b-blue w3-card-3 w3-animate-left test" style="width: 230px" id="mySidebar">
            <div class="w3-bar">
                <span class="w3-bar-item w3-padding-16">
                    <h3>Maxi chamados</h3>
                </span>
            </div>
            <div class="w3-bar-block">
                @Html.ActionLink("Cadastrar Chamado", "../Chamado", "Home", new { @class = "w3-bar-item w3-button" })
                @Html.ActionLink("Administrador", "../Administrador", "Index", new { @class = "w3-bar-item w3-button" })
            </div>
        </div>
    </div>

    <div style="margin-left: 230px">
        <div class="w3-container">
            <div class="w3-container w3-display-container">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Maximidia</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")

    @RenderSection("scripts", required: false)
</body>
</html>
